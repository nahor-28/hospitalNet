              <div class="buttons">
                <a href='/logout' class="button is-light">
                  Log Out
                </a>
              </div>
            </div>
          </div>
        </div>
    </nav>
    <section class="hero is-small is-success mb-4">
        <div class="hero-body">
          <p class="title">
            Admin Dashboard
          </p>
          <p class="subtitle">
            Hello <%= user.username %>
          </p>
        </div>
    </section>
      <div class="container">
        <section>
          <div class="buttons">
              <a href="/admin/register/patient" class="button is-success m-2">Register Patient</a>
              <a href="/admin/register/doctor" class="button is-success m-2">Register Doctor</a>
              <a href="/admin/view/doctors/<%= user.hospitalId %>" class="button is-success m-2">View Doctors</a>
              <a href="/admin/view/patients" class="button is-success m-2">View Patients</a>
          </div>
        </section>
      </div>

